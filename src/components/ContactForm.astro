      <span class="text-sm text-gray-700">Ime</span>
      <input class="card p-3" type="text" name="name" required />
    </label>

    <label class="grid gap-1">
      <span class="text-sm text-gray-700">Email</span>
      <input class="card p-3" type="email" name="email" required />
    </label>

